<Window x:Class="WatchedFile.ChangeFolder"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WatchedFile"
        mc:Ignorable="d"
        Title="ChangeFolder" Height="100.249" Width="300" WindowStyle="ToolWindow">
    <Grid>
        <TextBox x:Name="TB_Name" HorizontalAlignment="Left" Height="23" Margin="10,10,0,0" TextWrapping="Wrap" Text="{Binding Name, Mode=TwoWay}" VerticalAlignment="Top" Width="262"/>
        <Button x:Name="B_Cancel" Content="Cancel" HorizontalAlignment="Left" Margin="10,38,0,0" VerticalAlignment="Top" Width="75" Click="B_Cancel_Click"/>
        <Button x:Name="B_Ok" Content="Apply" HorizontalAlignment="Left" Margin="197,38,0,0" VerticalAlignment="Top" Width="75" Click="B_Ok_Click"/>
    </Grid>
</Window>
